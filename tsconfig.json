{
  "compilerOptions": {
    "outDir": "dist",
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "paths": {
      "@/repositories/*": ["./src/shared/repositories/*"],
      "@/entities/*": ["./src/shared/entities/*"],
      "@/responses": ["./src/shared/responses/index"]
    }
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules", "./src/templates/*.*"]
}
